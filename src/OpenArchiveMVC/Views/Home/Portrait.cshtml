@using System.Xml.Linq
@{
    //StaticObjects.engine.profiler.Restart();
    DateTime tt0 = DateTime.Now;

    string id = Context.Request.Query["id"];//.Params["id"];
    if (string.IsNullOrEmpty(id)) { return; }

    XElement special = OpenArchive.StaticObjects.engine.GetItemByIdBasic(id, false);
    if (special == null || special.Attribute("type") == null) { return; }
    string type = special.Attribute("type").Value;
}
@if (type == "http://fogid.net/o/person")
{
    @RenderPage("PortraitPerson.cshtml", new { id = id, type = type })
}
else if (type == "http://fogid.net/o/collection")
{
    @RenderPage("PortraitCollection.cshtml", new { id = id, type = type })
}
else if (type == "http://fogid.net/o/org-sys")
{
    @RenderPage("PortraitOrg.cshtml", new { id = id, type = type })
}
else if (type == "http://fogid.net/o/document")
{
    @RenderPage("PortraitDocument.cshtml", new { id = id, type = type })
}
else if (type == "http://fogid.net/o/city" || type == "http://fogid.net/o/country")
{
    @RenderPage("PortraitGeo.cshtml", new { id = id, type = type })
}
else 
{
    @RenderPage("PortraitAny.cshtml", new { id = id, type = type })
}

