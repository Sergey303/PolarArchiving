<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AJAXExp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js" ></script>
    <script>
        function Change(e) { alert("ALERT!"); e.preventDefault(); }
        function Change2(e) { alert("ALERT1!"); e.click.preventDefault(); alert("ALERT2!"); }
        function Change1() {
            $.ajax({
                method: "POST",
                url: "Home/EditForm",
                data: { name: "John", location: "Boston" }
            })
                .done(function (msg) {
                    alert("Data Saved: " + msg);
                });
        }
    </script>
    <script>
        // 1. Создаём новый объект XMLHttpRequest
        var xhr = new XMLHttpRequest();

        function HttpAsk(method, url, data, target) {
            //alert('start');
            xhr.open(method, url, false);

            // 3. Отсылаем запрос
            xhr.send(data);

            // 4. Если код ответа сервера не 200, то это ошибка
            if (xhr.status !== 200) {
                // обработать ошибку
                alert(xhr.status + ': ' + xhr.statusText); // пример вывода: 404: Not Found
            } else {
                // вывести результат
                //alert(xhr.responseText); // responseText -- текст ответа.
                //$('.result').html(xhr.responseText);
                //$('.result').add.html("Hello");
                document.getElementById(target).innerHTML = xhr.responseText;
            }
        }
    </script>
</head>
<body>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - AJAXExp</p>
        </footer>
    </div>


</body>
</html>
